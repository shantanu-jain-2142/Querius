<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ques_title"
                android:text="Title goes here."
                android:padding="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_ques"
                android:layout_below="@+id/ques_title"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="The Question Goes Here."
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


                <ImageView
                    android:id="@+id/ans_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_weight="0"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_send_black_24dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_ques"
                android:orientation="horizontal">


                <com.login_signup_screendesign_demo.RoundedImageView
                    android:id="@+id/logo1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ques"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thoms" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:text="Name"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_qual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Qualification/Tagline"
                        android:textSize="10dp" />
                </LinearLayout>


            </LinearLayout>



            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:fillViewport="false">


                <!--TextView
                    android:id="@+id/answerIshere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Answer Goes Here."
                    android:textSize="18sp"
                    /-->

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/scrollView">


                <com.login_signup_screendesign_demo.RoundedImageView
                    android:id="@+id/logo3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/ques"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thoms" />

                <ImageView
                    android:id="@+id/upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                    />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_comment_black_24dp"
                    />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    />


                <ImageView
                    android:id="@+id/book_mark"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_bookmark_border_black_24dp"
                    />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/rte_toolbar_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <include layout="@layout/rte_toolbar" />
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/textView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:layout_marginTop="66dp"-->
                <!--android:text="Answer" />-->

            <Button
                android:id="@+id/addans"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rtext"
                android:layout_centerHorizontal="true"
                android:text="Answer"/>

            <com.onegravity.rteditor.RTEditText
                android:id="@+id/rtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rte_toolbar_container"
                android:layout_marginTop="15dp"
                android:hint="answer here"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>