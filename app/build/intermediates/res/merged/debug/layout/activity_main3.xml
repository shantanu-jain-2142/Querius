
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swipe"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ques_title"
                android:text="Title goes here."
                android:padding="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_ques"
                android:layout_below="@+id/ques_title"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="The Question Goes Here."
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


                <ImageView
                    android:id="@+id/ans_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_weight="0"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_send_black_24dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_ques"
                android:orientation="horizontal">


                <com.login_signup_screendesign_demo.RoundedImageView
                    android:id="@+id/logo1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ques"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thoms" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:text="Name"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_qual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Qualification/Tagline"
                        android:textSize="10dp" />
                </LinearLayout>


            </LinearLayout>



            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:fillViewport="false">
                <!--android:layout_alignParentBottom="true">-->

                <TextView
                    android:id="@+id/answerIshere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Answer Goes Here."
                    android:textSize="18sp"
                    />

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:id="@+id/ll2"
                android:layout_below="@+id/scrollView">


                <com.login_signup_screendesign_demo.RoundedImageView
                    android:id="@+id/logo3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/ques"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thoms" />

                <ImageView
                    android:id="@+id/upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                    />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_comment_black_24dp"
                    />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    />


                <!--<ImageView-->
                    <!--android:id="@+id/book_mark"-->
                    <!--android:layout_width="24sp"-->
                    <!--android:layout_height="24sp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_marginLeft="160dp"-->
                    <!--android:layout_marginTop="3dp"-->
                    <!--app:srcCompat="@drawable/ic_bookmark_border_black_24dp"-->
                    <!--/>-->


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_below="@+id/card"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:id="@+id/hs_rel"
            android:paddingBottom="5dp">

            <android.support.design.widget.CoordinatorLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/co_layout"
                android:fitsSystemWindows="true" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_below="@id/card5"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:id="@+id/list_item"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="ABOUT THE AUTHOR"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item"
            android:orientation="horizontal">


            <com.login_signup_screendesign_demo.RoundedImageView
                android:id="@+id/logo2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ques"
                android:layout_gravity="fill_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/thoms" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="Name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_qual1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Qualification/Tagline"
                    android:textSize="10dp" />
            </LinearLayout>


        </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emp1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_business_center_black_24dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Add Employment Credentials" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="135dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/edu1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_school_black_24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Educational Credentials"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="180dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/loc1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Locational Credentials"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>