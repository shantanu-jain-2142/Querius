<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="CREDENTIALS AND HIGHLIGHTS"
            android:layout_gravity="start"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emp"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_business_center_black_24dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Add Employment Credentials" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="87dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/edu"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_school_black_24dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Educational Credentials"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="132dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/loc"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_location_on_black_24dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Locational Credentials"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>

